@using BOL;
@{
    ViewData["Title"] = "Index Page";
}

<div>
    <h2>List of  Departments in GoGrocers</h2>
    @{
        List<Department> allDepartments= (List<Department>)ViewData["departments"];
        <ol>
            @foreach( Department dept in allDepartments){
                <li> <a href="/departments/details/@dept.Id">@dept.Name</a></li>
            }    
        </ol>    
    }
</div>
